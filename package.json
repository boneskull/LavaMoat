{
  "name": "lavamoat-monorepo",
  "private": true,
  "overrides": {
    "type-fest": "^2.19.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@metamask/eslint-config-nodejs": "^12.0.0",
    "ava": "^5.2.0",
    "depcheck": "^1.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-react": "^7.33.0",
    "lerna": "^6.6.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "npm --workspaces test",
    "test:prep": "lerna run test:prep",
    "lint": "npm run lint:eslint && npm run lint:deps",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:deps": "lerna run lint:deps",
    "preversion": "npm run rebuild",
    "build": "npm -w @lavamoat/lavapack -w @lavamoat/viz -w @lavamoat/yarn-plugin-allow-scripts run build",
    "rebuild": "npm -w @lavamoat/lavapack -w @lavamoat/viz -w @lavamoat/yarn-plugin-allow-scripts run rebuild",
    "publish": "lerna publish from-package --no-push --no-git-tag-version --yes",
    "setup": "allow-scripts"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "lavamoat": {
    "allowScripts": {
      "lerna>nx": false,
      "lerna>nx>@parcel/watcher": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  }
}
